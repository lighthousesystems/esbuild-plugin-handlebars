{
  "compilerOptions": {
    "outDir": "dist/",
    "declaration": true,

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "lib": ["ES2020"],
    "skipLibCheck": true
  },

  "exclude": ["node_modules", "dist"]
}
